@require '_variables'
@require '_mixins'

.form-container
  .alert
    margin-bottom 20px

.form
  .loader
    display none
  &.form-loading
    position relative
    &:before
      position absolute
      content ' '
      top 0
      left 0
      right 0
      bottom 0
      background-color alpha($color-lightest, 0.5)
      z-index $layer-lowest
    .loader
      display block
      position absolute
      top 50%
      left 50%
      transform('translate(-50%,-50%)')
      z-index $layer-low
